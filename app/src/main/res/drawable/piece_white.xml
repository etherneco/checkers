<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="2dp" android:top="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="#33000000" />
        </shape>
    </item>
    <item android:bottom="3dp">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#FFF9F4EE"
                android:centerColor="@color/piece_white"
                android:endColor="#FFE0D4C8" />
            <stroke android:width="2dp" android:color="@color/piece_stroke" />
        </shape>
    </item>
    <item android:top="4dp" android:left="6dp" android:right="6dp">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#80FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>
